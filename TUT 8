#include<iostream>
using namespace std;

template <typename T>
void mySort(T arr[], int n) {
    for (int i = 0; i < n - 1; i++) {
        int minPos = i;
        for (int j = i + 1; j < n; j++) {
            if (arr[j] < arr[minPos]) {
                minPos = j;
            }
        }
        T temp = arr[minPos];
        arr[minPos] = arr[i];
        arr[i] = temp;
    }
}

template <typename T>
void showArray(T arr[], int n) {
    for (int i = 0; i < n; i++) {
        cout << arr[i] << " ";
    }
}

int main() {
    int option, n;

    while (true) {
        cout << "\nChoose array type:\n1. Integer\n2. Float\n3. Exit\nEnter your choice: ";
        cin >> option;

        if (option == 3) {
            cout << "Exiting program... Goodbye!" << endl;
            break;
        }

        cout << "Enter number of elements: ";
        cin >> n;

        if (option == 1) {
            int arr[n];
            for (int i = 0; i < n; i++) {
                cout << "Enter element " << i + 1 << ": ";
                cin >> arr[i];
            }
            mySort(arr, n);
            cout << "\nSorted Integer Array: ";
            showArray(arr, n);
            cout << "\n";
        }
        else if (option == 2) {
            float arr[n];
            for (int i = 0; i < n; i++) {
                cout << "Enter element " << i + 1 << ": ";
                cin >> arr[i];
            }
            mySort(arr, n);
            cout << "\nSorted Float Array: ";
            showArray(arr, n);
            cout << "\n";
        }
        else {
            cout << "Invalid option! Please try again.\n";
        }
    }

    return 0;
}
